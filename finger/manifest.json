{
  "name": "Finger",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Use your finger to do great things.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
	"<all_urls>",
	"http://localhost:8000/camera.html"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:8000/camera.html"],
      "js": ["evil.js"]
    }
  ]
}
